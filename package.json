{
  "name": "kitesurf-app-backend",
  "version": "0.1.0",
  "description": "Backend for kitesurf school booking system (Node.js + Express + PostgreSQL)",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "migrate": "set -a && source .env && psql \"$DATABASE_URL\" -f sql/schema.sql",
    "smoke": "node scripts/smoke.js",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down"
  },
  "dependencies": {
    "@angular/animations": "^20.3.3",
    "bcrypt": "^5.1.0",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.0",
    "nodemailer": "^6.9.4",
    "pg": "^8.11.0"
  },
  "devDependencies": {
    "node-fetch": "^2.6.7",
    "nodemon": "^2.0.22"
  }
}
